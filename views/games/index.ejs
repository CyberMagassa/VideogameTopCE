<%- include('../partials/header') %>


<h2>Games List</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Year</th>
      <th>ESRB</th>
      <th>Developer</th>
      <th>Console</th>
      <th>Out Now</th>
    </tr>
  </thead>
  <tbody>
    <% games.forEach(function(g) { %>

        <tr>
            <td><%= g.title %></td>
            <td><%= g.releaseYear %></td>
            <td><%= g.ESRB %></td>
            <td><%= g.devTeam %></td>
            <td><%= g.console %></td>
            <td><%= g.outNow ? 'Yes' : 'No'  %></td>
        </tr>
    <% }) %>
    <!-- Close the forEach using EJS here -->
  </tbody>
</table>

<%- include('../partials/footer') %>